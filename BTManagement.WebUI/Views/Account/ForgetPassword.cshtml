@model ForgetPasswordViewModel

@{
    Layout = "_LayoutLogin";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo text-center">
                <img src="~/template/images/dsi24.png" width="200" height="200" />
            </div>
            <div class="text-center">
                <h2>BT Yönetimi</h2>
                <h3>Yeni Şifre Alma Sayfası</h3>
                <label style="color:red">Lütfen sistemde kayıtlı olan bir kullanıcı adı giriniz!</label>
            </div>
            <form class="pt-3" method="post" asp-action="ForgetPassword" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="kullanıcı adı giriniz..." />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="şifre giriniz..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label"></label>
                    <input type="password" asp-for="RePassword" class="form-control" placeholder="tekrar şifre giriniz..." />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" value="Şifre Değiştir" class="btn btn-warning" title="Şifre Değiştir"><i class="fa-solid fa-key"></i> Yeni Şifre Al</button>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-primary" href="/login"><i class="fa-solid fa-home"></i> Giriş Sayfasına Dön!</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>