@model IEnumerable<Images>

@{
    ViewData["Title"] = "Yapılan Çalışmayla İlgili Resimler";
}

<div class="row mb-4">
        <div class="section-title mt-2">
        <h4 class="m-0 font-weight-bold">@ViewData["WorksDoneName"]&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; (@Model.Count() Adet) </h4>
            <hr />
        </div>
        @foreach (var item in Model)
        {
        <div class="col-lg-3">
            <p class="mt-2">
                <img src="@Url.Action("ViewImage", new { id = item.Id })" class="card-img-top" width="200" height="200">
            </p>
            <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="İndir"><i class="fa-solid fa-download"></i> İndir</a>
        </div>
        }
</div>
<div>
    <a href="/yapilanisler"><i class="fa-solid fa-backward"></i> Listeye Geri Dön</a>
</div>