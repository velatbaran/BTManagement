@model IEnumerable<Products>

@{
    ViewData["Title"] = "Ürün Listesi";
}
<link href="~/datatable/buttons.datatables.css" rel="stylesheet" />
<link href="~/datatable/responsive.datatables.min.css" rel="stylesheet" />
<link href="~/datatable/datatables.min.css" rel="stylesheet" />
<p>
    <a asp-action="Create" class="btn btn-outline-primary" title="Yeni Ekle">
        <i class="fa-solid fa-plus"></i> Yeni Ekle
    </a>
</p>

<style>
    .table {
        font-family: Arial, sans-serif;
        font-size: 14px;
        color: #333;
    }

        .table th {
            font-weight: bold;
            font-size: 11px;
        }

        .table td {
            font-size: 11px;
        }

</style>

<table class="table table-bordered table-striped" id="myTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Brand)</th>
            <th>@Html.DisplayNameFor(m => m.Model)</th>
            <th>@Html.DisplayNameFor(m => m.SerialNo)</th>
            <th>@Html.DisplayNameFor(m => m.Username)</th>
            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
            <th>@Html.DisplayNameFor(m => m.DepartmentId)</th>
            <th>@Html.DisplayNameFor(m => m.State)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.NetworkAddress)</th>
            <th>@Html.DisplayNameFor(m => m.NetworkName)</th>
            <th>@Html.DisplayNameFor(m => m.HardwareName)</th>
            <th>@Html.DisplayNameFor(m => m.Feature)</th>
            <th>@Html.DisplayNameFor(m => m.Created)</th>
            <th>@Html.DisplayNameFor(m => m.CreatedDate)</th>
            <th>İşlemler</th>
        </tr>
        <tr>
            <th><input type="text" placeholder="Ara Marka" /></th>
            <th><input type="text" placeholder="Ara Model" /></th>
            <th><input type="text" placeholder="Ara Seri No" /></th>
            <th><input type="text" placeholder="Ara Kullanıcı" /></th>
            <th><input type="text" placeholder="Ara Kategori" /></th>
            <th><input type="text" placeholder="Ara Departman" /></th>
            <th><input type="text" placeholder="Ara Durum" /></th>
            <th><input type="text" placeholder="Ara Açıklama" /></th>
            <th><input type="text" placeholder="Ara Ağ Adresi" /></th>
            <th><input type="text" placeholder="Ara Ağ Adı" /></th>
            <th><input type="text" placeholder="Ara Donanım Adı" /></th>
            <th><input type="text" placeholder="Ara Özellik" /></th>
            <th><input type="text" placeholder="Ara Oluşturan" /></th>
            <th><input type="text" placeholder="Ara Tarih" /></th>
            <th></th> <!-- İşlemler sütunu filtre yok -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Brand)</td>
                <td>@Html.DisplayFor(m => item.Model)</td>
                <td>@Html.DisplayFor(m => item.SerialNo)</td>
                <td>@Html.DisplayFor(m => item.Username)</td>
                <td>@Html.DisplayFor(m => item.Category.Name)</td>
                <td>@Html.DisplayFor(m => item.Department.Name)</td>
                <td>@Html.DisplayFor(m => item.State)</td>
                <td>@Html.DisplayFor(m => item.Description)</td>
                <td>@Html.DisplayFor(m => item.NetworkAddress)</td>
                <td>@Html.DisplayFor(m => item.NetworkName)</td>
                <td>@Html.DisplayFor(m => item.HardwareName)</td>
                <td>@Html.DisplayFor(m => item.Feature)</td>
                <td>@Html.DisplayFor(m => item.Created)</td>
                <td>@Html.DisplayFor(m => item.CreatedDate)</td>
                <td>
                    <a class="btn btn-outline-warning btn-sm btn-rounded" asp-action="Edit" asp-route-id="@item.Id" title="Güncelle">
                        <i class="fa-solid fa-pen-to-square"></i> Güncelle
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-sm btn-rounded"
                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-file-id="@item.Id" data-file-name="@item.Brand" title="Sil">
                        <i class="fa-solid fa-trash"></i> Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <strong id="fileName"></strong> silmek istediğine emin misin?
                    <input type="hidden" name="id" id="fileId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm btn-rounded" data-bs-dismiss="modal">
                        <i class="fa-solid fa-xmark" title="İptal"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-outline-danger btn-sm btn-rounded" title="Sil">
                        <i class="fa-solid fa-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @*     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/datatable/datatables.min.js"></script>
    <script src="~/datatable/datatables.responsive.min.js"></script>
    <script src="~/datatable/datatables.buttons.min.js"></script>
    <script src="~/datatable/buttons.html5.min.js"></script>
    <script src="~/datatable/buttons.print.min.js"></script>
    <script src="~/datatable/jszip.min.js"></script>
    <script src="~/datatable/pdfmake.min.js"></script>
    <script src="~/datatable/vfs_fonts.js"></script>
    <script>
        $(document).ready(function () {
            // Modal tetikleme
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                $('#fileId').val(button.data('file-id'));
                $('#fileName').text(button.data('file-name'));
            });

            // DataTable başlat
            var table = $('#myTable').DataTable({
        dom: 'Brtip', // 'f' yani global search kaldırıldı, sadece tablo ve butonlar kalıyor. // B sondaysa butonlar altta
            buttons: [
                'copy', 'excel', 'csv', 'pdf', 'print'
            ],
                responsive: {
                    details: { type: 'column' }
                },
                columnDefs: [
                    { className: 'control', orderable: false, targets: 0 }, // + işareti başta
                    { orderable: false, targets: -1 } // İşlemler sütunu
                ],
                order: [[1, 'asc']],
                language: { url: '/datatable/tr.json' }
            });

            // Header altındaki inputlar ile kolon bazlı filtreleme
            $('#myTable thead tr:eq(1) th').each(function (i) {
                $('input', this).on('keyup change clear', function () {
                    if (table.column(i).search() !== this.value) {
                        table.column(i).search(this.value).draw();
                    }
                });
            });
        });
    </script>
}
