            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            <img src="~/template/images/user.png" width="25" height="25"> @Context.User.Identity.Name
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            @* <a class="dropdown-item" href="/Account/MyProfile" title="Profilim"> *@
                            <a class="dropdown-item" href="/profilim" title="Profilim">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                Profilim
                            </a>
                            @* <a class="dropdown-item" href="/Account/ChangePassword" title="Şifremi Değiştir"> *@
                            <a class="dropdown-item" href="/sifremidegistir" title="Şifremi Değiştir">
                                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                Şifre Değiştir
                            </a>
                            <a class="dropdown-item" href="/cikis" title="Çıkış">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Çıkış
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        @* <a class="nav-link" href="/Home/Index" title="Anasayfa"> *@
                        <a class="nav-link" href="/anasayfa" title="Anasayfa">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Anasayfa</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#ui-basic-1" aria-expanded="false" aria-controls="ui-basic-1" title="Envanter Yönetimi">
                            <i class="fa-solid fa-desktop mr-2"></i>
                            <span class="menu-title">Envanter Yönetimi</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic-1">
                            <ul class="nav flex-column sub-menu">
                                @* <li class="nav-item"><a class="nav-link" href="/Products/Index" title="Envanter Listesi">Envanter Listesi</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/urunler" title="Envanter Listesi">Envanter Listesi</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/Category/Index" title="Kategori">Kategoriler</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/kategoriler" title="Kategori">Kategoriler</a></li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#ui-basic-2" aria-expanded="false" aria-controls="ui-basic-2" title="Rehber Yönetimi">
                            <i class="fa-solid fa-phone mr-2"></i>
                            <span class="menu-title">Rehber Yönetimi</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic-2">
                            <ul class="nav flex-column sub-menu">
                                @* <li class="nav-item"><a class="nav-link" href="/Guide/Index" title="Rehber Listesi">Rehber Listesi</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/rehberim" title="Rehber Listesi">Rehber Listesi</a></li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#ui-basic-3" aria-expanded="false" aria-controls="ui-basic-2" title="Alımların Yönetimi">
                            <i class="fa-solid fa-money-bill mr-2"></i>
                            <span class="menu-title">Alımların Yönetimi</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic-3">
                            <ul class="nav flex-column sub-menu">
                                @* <li class="nav-item"><a class="nav-link" href="/Purchases/Index" title="Tüm Alımlar">Tüm Alımlar</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/satinalimlarim" title="Tüm Alımlar">Tüm Alımlar</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/Firms/Index" title="Firmalar">Firmalar</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/firmalar" title="Firmalar">Firmalar</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/FirmKinds/Index" title="Firma Listesi">Firma Türleri</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/firmaturleri" title="Firma Listesi">Firma Türleri</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/PurchaseKinds/Index" title="Alım Süreci">Alım Türleri</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/satinalimturleri" title="Alım Süreci">Alım Türleri</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/PurchaseForms/Index" title="Alım Şekli">Alım Şekli</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/satinalimsekilleri" title="Alım Şekli">Alım Şekli</a></li>
                                @* <li class="nav-item"><a class="nav-link" href="/PurchaseTypes/Index" title="Alım Tipi">Alım Tipi</a></li> *@
                                <li class="nav-item"><a class="nav-link" href="/satinalimtipleri" title="Alım Tipi">Alım Tipi</a></li>
